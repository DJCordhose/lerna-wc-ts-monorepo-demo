    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-lit": "^0.6.0",
    "eslint-plugin-wc": "^1.0.0",
    "lerna": "^3.13.0",
    "parcel-bundler": "^1.11.0",
    "polyserve": "^0.27.15",
    "typescript": "^3.3.3"
